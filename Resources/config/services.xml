<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Miracode\StripeBundle\Controller\WebhookController" public="true">
            <argument type="service" id="event_dispatcher" />
            <call method="setContainer">
                <argument type="service" id="Symfony\Component\DependencyInjection\ParameterBag\ContainerBagInterface"/>
            </call>
            <tag name="container.service_subscriber"/>
        </service>
        <service id="miracode_stripe.model_transformer.annotation"
                 class="Miracode\StripeBundle\Transformer\AnnotationTransformer">
        </service>
        <service id="Miracode\StripeBundle\Stripe\StripeClient">
            <argument type="collection">
                <argument key="environment">%miracode_stripe.environment%</argument>
                <argument key="secret_key">%miracode_stripe.secret_key%</argument>
                <argument key="perishable_key">%miracode_stripe.perishable_key%</argument>
                <argument key="secret_key_test">%miracode_stripe.test.secret_key%</argument>
                <argument key="perishable_key_test">%miracode_stripe.test.perishable_key%</argument>
                <argument key="stripe_version">%miracode_stripe.api_version%</argument>
            </argument>
        </service>
    </services>
</container>
